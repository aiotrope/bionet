---
import logo from '/icon-192.png';
---

<footer class="footer-banner" role="img" aria-label="Footer banner section of the website">
  <div>
    <img src={logo} alt="Logo of Arnel Imperial's website" class="footer-logo"/>

    <p class="footer-hero-text">
      Personal internet site project by
      <a href="#contact" class="footer-hero-text">Arnel Imperial</a>
    </p>
   <p class="footer-hero-text">Website updated: 13.02.2023</p>
  </div>
</footer>

<style>
  .footer-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    width: 100%;
    height: 60vh; /* if you don't want it to take up the full screen, reduce this number */
    overflow: hidden;
    background-size: cover !important;
    padding: 0 !important;
    background: radial-gradient(
        ellipse at center,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 0) 37%,
        rgba(0, 0, 0, 0.65) 100%
      ),
      url(../../footer.svg) no-repeat center center scroll;
  }

  .footer-hero-text {
    color: var(--color-offwhite);
    font-size: 3.5vmin;
  }

  .footer-logo {
    height: 80px;
    width: 80px;
    margin-bottom: 1rem;
  }

  @media (min-width: 481px) {
   .footer-hero-text {
    font-size: 1em;
   }
  }
</style>
